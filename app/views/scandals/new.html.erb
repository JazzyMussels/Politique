<h1>What's the Tea?</h1><br>
<%= form_for @scandal do |f| %><br>
<%= f.label :user_id, "Politician Who Did It" %><br>
<%= f.collection_select(:id, User.all_politicians, :id, :name) %><br>
<%= f.label :title, "Scandal Title" %><br>
<%= f.text_field :title %><br>
<%= f.label :content, "Whistleblow This MoFo" %><br>
<%= f.text_area :content %><br>
<%= f.label :photographic_evidence, "Let's See Some Proof!" %><br>
<%= f.text_field :photographic_evidence %><br>
<%= f.submit %><br>
<% end %>
<% flash.each do |key, value| %>
  <div class="alert alert-<%= key %>"><%= value %></div>
<% end %><br>
<%= link_to  "Back", scandals_path %>

