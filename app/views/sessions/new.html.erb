    <section class="main">
          <%= form_for(:session, url: login_path, :html => {:class => "form-3"}) do |f| %>

          <% if flash[:notice] %>
            <div class="notification is-primary global-notification">
            <p class="notice"><%= notice %></p>
            </div>
          <% end %>

          <p class="clearfix">
            <%= f.label :email %>
            <%= f.email_field :email, type: 'text', placeholder: 'Email' %>
          </p>

          <p class="clearfix">
            <%= f.label :password %>
          </p>
          <p>
            <%= f.password_field :password, style: "width: 100%;", placeholder: 'Password' %>
          </p>

          <br>
          <p class="clearfix">
            <%= f.submit "Log in"%>
          </p>
          <% end %>
    </section>
    
